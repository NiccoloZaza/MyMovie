<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FadingRecyclerView">
        <attr name="topFadeEnabled" format="boolean"/>
        <attr name="bottomFadeEnabled" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="FancySelector" parent="FrameLayout">
        <attr name="itemSize" format="dimension"/>
        <attr name="selectedItemBackgroundColor" format="color"/>
        <attr name="selectedItemImageColor" format="color"/>
        <attr name="defaultBackgroundColor" format="color"/>
        <attr name="defaultImageColor" format="color"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="animationDuration" format="integer"/>
        <attr name="imagePaddings" format="dimension"/>
        <attr name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>