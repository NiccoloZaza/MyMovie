<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header_line"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_header"
            android:fontFamily="@font/helvetica_neue_75"
            android:text="@string/top_rated_movies"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.flatrock.glib.views.FancySelector
            app:animationDuration="200"
            app:cornerRadius="10dp"
            app:itemSize="35dp"
            app:defaultBackgroundColor="@color/colorAccent"
            app:selectedItemBackgroundColor="#9000a3"
            app:imagePaddings="8dp"
            app:orientation="horizontal"
            app:defaultImageColor="@android:color/darker_gray"
            app:selectedItemImageColor="@android:color/white"
            android:id="@+id/top_popular_selector"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.flatrock.glib.views.LockedViewPager
        app:layout_constraintStart_toStartOf="@+id/header_line"
        app:layout_constraintEnd_toEndOf="@+id/header_line"
        app:layout_constraintTop_toBottomOf="@+id/header_line"
        app:layout_constraintBottom_toTopOf="@+id/main_bottom_nav"
        android:id="@+id/main_pager"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/main_bottom_nav_items"
        android:id="@+id/main_bottom_nav"
        android:background="@drawable/black_fade_top"
        android:theme="@style/MainBottomNavigationStyle"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"/>
</androidx.constraintlayout.widget.ConstraintLayout>
